<!-- views/lost_password.ejs -->
<style type="text/css" media="all">
body {
    background-color: #9E9E9E;
    background-position: top center;
    background-repeat: repeat-y;
    margin: 0;
    padding: 0;
    font-family: arial,sans-serif;
}
h1 {
    font-family: georgia, sans-serif;
    font-weight: normal;
    font-style: italic;
}
h3 {
    margin: 0;
    padding: 0;
    font-size: 18px;
    color: #006699;
}
.red {
    color: #ff0000;
}
.clear {
    clear: both;
}
a {
    text-decoration: none;
}
a img {
    border: none;
}
td.mainbar p {
    font-family: Arial;
    font-size: 17px;
    font-weight: normal;
    color: #4c4c4c;
    margin: 10px 0 0 0;
    padding: 0;
    margin: 0px 70px;
}
td.mainbar p a {
    font-family: Arial;
    font-size: 12px;
    font-weight: normal;
    color: #00a4d1;
}
table.main {
    padding-bottom: 20px;
    background-color: #F8F8F8;
}
.main h1 {
    color: #4c4c4c;
    font-family: Arial;
    font-size: 35px;
    font-weight: normal;
    margin: 10px 15px 0 15px;
    margin-left: 70px;
}
.logoContainer {
    background-color: #D83030;
}
.Logo_Text {
    font-size: 26px;
    color: black;
    height: 60px;
    text-align: left;
}
.cancel_footer td {
    color: black !important;
    background-color: #d3d3d3;
    line-height: 1.2;
}
.cancel_footer td a {
    color: #30A0D8 !important;
}
.alignCenter {
    text-align:center;
}
p.bigger strong {
    font-size: 20px;
}
p.bigger b {
    font-size: 18px;
}
.social-td {
    text-align: center;
}
.social-links{
    display: inline-block;
    text-align: justify;
    width: 100%;
    padding: 0;
}
.social-links div{
    display: inline-block;
    height: 32px;
    width: 32px;
    margin: 0 5px;
}
.social-links div a{
    text-decoration: none;
    display: block;
    height: 32px;
    width: 32px;
}
</style>
<table width="100%" cellspacing="10" cellpadding="0">
   <tr>
      <td align="center" valign="top">
         <table width="750" border="0" cellspacing="0" cellpadding="0" style="height: 30px !important;">
             <thead>
                <tr style="height: 30px !important;">
                   <td class="logoContainer" style="width: 60px;">
                        <img class="Logo_Image" src="<%= $logo_url %>" alt="<%= $site_name %>"/>
                   </td>
                   <td class="logoContainer" style="color:#fff;">
                        <span class="Logo_Text"><%= $site_name %></span>
                   </td>
                </tr>
            </thead>
         </table>
         <table width="750" border="0" cellspacing="0" cellpadding="0" class="main">
            <tbody>
                <tr align="left" valign="top" style='<%= $style %>'>
                    <td width="600" valign="top" class="mainbar" align="left">
                        <br />
                        <br />
                        <br />
                        <h1>Lost Password</h1>
                        <br />
                        <br />
                        <p class="bigger"><strong>Reference Number: <%= $ticket_id %></strong></p>
                        <br />
                        <p>Dear <%= $first_name %>,</p>
                        <br />
                        <p>Your password is: <b><%= $password %></b></p>
                        <br />
                        <p>You can now login and start playing your favorite games.</p>
                        <br />
                        <p>If you wish to change your password, please go to 'my account' once you are logged in.</p>
                        <br />
                        <p>Thank you for using <%= $site_name %>, if you have additional questions or comments, please do not hesitate to contact us.</p>
                        <br />
                        <br />
                        <% if ($phone != $secondary_phone) { %>
                            <p class="alignCenter bigger"><b>Toll-free No: <%= $phone %></b></p>
                            <br />
                            <p class="alignCenter bigger"><b>Primary #: <%= $secondary_phone %></b></p>
                        <% } else { %>
                            <p class="alignCenter bigger"><b>Toll-free No: <%= $phone %></b></p>
                        <% } %>
                        <br />
                        <br />
                        <p style="font-style:italic; font-weight:bold;"><b>Please retain this email for your records.</b></p>
                        <br />
                        <br />
                        <br />
                    </td>
                </tr>
            </tbody>
        </table>
        <table width="750" border="0" cellspacing="0" cellpadding="0">
            <tr>
                <td>
                    <table width="750" cellspacing="0" cellpadding="10" class="cancel_footer">
                        <tr>
                            <td width="33%">
                                <p>Talk to you soon!</p>
                            </td>
                            <td width="33%" class="social-td">
                            <% if ($isHighTrafficSite) { %>
                                <div class="social-links">
                                    <div>
                                        <p>Join us on <a href="__FACEBOOK_LINK__" target="_blank">Facebook</a></p>
                                    </div>
                                </div>
                            <% } %>
                            </td>
                            <td width="33%" style="text-align:right;">
                                <p><%= $site_name %> Support Staff</p>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        <tr>
          <td align="center" style="font:normal 11px arial; color:#222222;">
              &copy; <%= $site_name %>, 2017 &middot;
              <a href="http://www.<%= $domain_name %>/support" style="color:#006699;text-decoration:none;" target="_blank">Support</a> &middot;
              <a href="__TERMS_CONDITIONS_LINK__" style="color:#006699;text-decoration:none;" target="_blank">Terms</a> &middot;
              <a href="__PRIVACY_CONDITIONS_LINK__" style="color:#006699;text-decoration:none;" target="_blank">Privacy Policy</a><br />
          </td>
        </tr>
      </td>
   </tr>
</table>
